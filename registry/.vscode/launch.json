    "version": "0.2.0",
    "configurations": [

        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "https://172.16.121.39:3000",
            "webRoot": "${workspaceFolder}"
        },

        {
            "type": "firefox",
            "request": "launch",
            "name": "Launch firefox against localhost",
            "url": "https://172.16.121.39:3000",
            "webRoot": "${workspaceFolder}"
        },

        {
            "type": "msedge",
            "request": "launch",
            "name": "Launch msedge",
            "url": "https://172.16.121.39:3000",
            "webRoot": "${workspaceFolder}"
        },

        {
            // режим attach с LiveServer
            "name": "Attach Chrome tab, server LiveServer",
            "type": "chrome",
            "request": "attach",
            "port": 9222,
            "url": "http://localhost:5555",
            "webRoot": "${workspaceFolder}/.output/public"
        },

        {
            // режим attach с LiveServer
            "name": "Chrome product",
            "type": "chrome",
            "request": "launch",
            "url": "https://localhost",
            "webRoot": "${workspaceFolder}/.output/public/server"
        },
    ]
